# Caddyfile for Hookshot
#
# Caddy automatically obtains and renews Let's Encrypt certificates.
# Port 80 must remain accessible for ACME HTTP-01 challenges.

{$DOMAIN:webhooks.susanoo.pl} {
    reverse_proxy hookshot:3000

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Logging
    log {
        output stdout
        format console
    }
}

# Redirect HTTP to HTTPS (except ACME challenges, handled automatically)
http://{$DOMAIN:webhooks.susanoo.pl} {
    redir https://{host}{uri} permanent
}
